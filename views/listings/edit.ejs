<% layout("/layouts/boilerplate") %>
<body>
    <div class="row offset-2 mt-3">
        <div class="col-8">
            <h3>Edit The Listing</h3>
            <form 
            method="post" 
            action="/listings/<%= listing._id %>?_method=put" 
            novalidate class="needs-validation" 
            enctype="multipart/form-data">
                <div class="mb-3">
                    <p>Original Image</p>
                    <img src="<%= originalImageUrl %>" alt="originalImage">
                </div>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" 
                    type="text" value="<%= listing.title %>" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter a Valid Name
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" 
                    class="form-control" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">
                        Enter a Valid Description
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="listing[image]" 
                    type="file" class="form-control">
                    <div class="invalid-feedback">
                        Upload Valid Image
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" 
                        type="number" value="<%= listing.price %>" class="form-control" required>
                        <div class="invalid-feedback">
                            Enter a Valid Price
                        </div>
                    </div>
                    <div class="mb-3 col-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" 
                        type="text" value="<%= listing.country %>" class="form-control" required>
                        <div class="invalid-feedback">
                            Enter a Valid Country Name
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" 
                    type="text" value="<%= listing.location %>" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter a Valid Location
                    </div>
                </div>
                <button class="btn edit-btn mt-3 mb-4">Edit</button>
            </form>
        </div>
    </div>
</body>